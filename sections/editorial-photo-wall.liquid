{% comment %}
  Editorial Photo Wall - Pure Layout Fix (No Style Changes)
{% endcomment %}

<style>
  /* === 1. 电脑端：保持你原版逻辑，一点都不动 === */
  #editorial-mobile-fix .editorial-collection__grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 20px;
    width: 100%;
    position: relative;
  }

  /* === 2. 手机端：只修正布局结构，不改设计风格 === */
  @media screen and (max-width: 768px) {
    
    /* 容器修复：改为弹性列，撑开高度，防止侵入 Footer */
    #editorial-mobile-fix .editorial-collection__grid {
      display: flex !important;
      flex-direction: column !important;
      height: auto !important;
      min-height: auto !important;
      gap: 40px !important; /* 保持模块间的呼吸感 */
      padding: 20px 0 !important; /* 移除多余边距，保持原版宽度 */
      box-sizing: border-box !important;
      width: 100% !important;
    }

    /* 子元素重置：清除 Liquid 计算的绝对坐标，防止重叠 */
    #editorial-mobile-fix .editorial-collection__grid > div {
      grid-column: auto !important;
      grid-row: auto !important;
      position: relative !important;
      top: auto !important;
      left: auto !important;
      transform: none !important;
      margin: 0 !important;
      height: auto !important;
    }

    /* --- 核心布局：左右错落 (只通过 Margin 实现，不改图片尺寸) --- */
    
    /* 奇数项 (1, 3...)：靠左 */
    #editorial-mobile-fix .editorial-collection__grid > div:nth-child(odd) {
      width: 88% !important; /*稍微留出一点空间给错落感*/
      margin-right: auto !important;
      margin-left: 0 !important;
    }

    /* 偶数项 (2, 4...)：靠右 */
    #editorial-mobile-fix .editorial-collection__grid > div:nth-child(even) {
      width: 88% !important;
      margin-left: auto !important;
      margin-right: 0 !important;
    }
    
    /* ------------------------------------------------ */

    /* 隐藏占位符 */
    .editorial-collection__spacer {
      display: none !important;
    }

    /* 卡片内部：图上字下，确保文字不重叠 */
    #editorial-mobile-fix .collection-card {
      display: flex !important;
      flex-direction: column !important;
      width: 100% !important;
      height: auto !important;
    }

    /* 图片：保持原样，直角，无额外修饰 */
    #editorial-mobile-fix .collection-card__image {
      width: 100% !important;
      height: auto !important;
      padding-top: 0 !important;
      position: relative !important;
    }
    
    #editorial-mobile-fix .collection-card__image img {
      width: 100% !important;
      height: auto !important;
      object-fit: cover !important;
      display: block !important;
      border-radius: 0 !important; /* 强制直角 */
    }

    /* 文字：保持原版大小和排版 */
    #editorial-mobile-fix .collection-card__content {
      position: relative !important;
      width: 100% !important;
      padding-top: 15px !important; /* 仅在图片和文字间加一点间距 */
      text-align: left !important;
    }
  }
  /* 真相测试 */
body { border: 10px solid red !important; }
</style>

<section class="section editorial-collection color-{{ section.settings.color_scheme }}" id="editorial-mobile-fix">
  <div class="section__content section__content--{{ section.settings.section_width }}" style="padding-block-start: {{ section.settings.padding_block_start | append: 'px' }}; padding-block-end: {{ section.settings.padding_block_end | append: 'px' }};">
    <div class="editorial-collection__grid">
      <div class="editorial-collection__spacer"></div>

      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          {% assign image = block.settings.image %}
          {% assign caption = block.settings.caption %}
          {% assign link = block.settings.link %}
          {% assign alt = block.settings.alt %}

          {% liquid
            assign current_grid_index = forloop.index0 | divided_by: 8
            assign current_item_index = forloop.index0 | modulo: 8

            case current_item_index
              when 0
                assign grid_column = '2 / span 4'
                assign grid_row = 1
                assign grid_row_span = 5
              when 1
                assign grid_column = '7 / span 5'
                assign grid_row = 3
                assign grid_row_span = 5
              when 2
                assign grid_column = '1 / span 8'
                assign grid_row = 9
                assign grid_row_span = 6
              when 3
                assign grid_column = '3 / span 8'
                assign grid_row = 16
                assign grid_row_span = 6
              when 4
                assign grid_column = '7 / span 5'
                assign grid_row = 23
                assign grid_row_span = 5
              when 5
                assign grid_column = '2 / span 4'
                assign grid_row = 25
                assign grid_row_span = 5
              when 6
                assign grid_column = '5 / span 8'
                assign grid_row = 31
                assign grid_row_span = 6
              when 7
                assign grid_column = '2 / span 8'
                assign grid_row = 38
                assign grid_row_span = 6
            endcase

            assign full_grid_rows = current_grid_index | times: 44
            assign grid_row = grid_row | plus: full_grid_rows
          %}

          <div
            class="editorial-collection__item-{{ forloop.index0 | modulo: 4 }}"
            style="grid-column: {{ grid_column }}; grid-row: {{ grid_row }} / span {{ grid_row_span }};"
          >
            <div class="collection-card collection-card--image-bg collection-card--flexible-aspect-ratio">
              {% if link != blank %}<a class="collection-card__link" href="{{ link }}">{% endif %}
                <div class="collection-card__image">
                  {% if image != blank %}
                    {{ image | image_url: width: 1500 | image_tag: loading: 'lazy', alt: alt }}
                  {% else %}
                    {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
              {% if link != blank %}</a>{% endif %}

              <div class="collection-card__inner">
                <div class="collection-card__content layout-panel-flex--column">
                  {% if caption != blank %}
                    <p class="collection-card__caption">{{ caption }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% elsif block.type == 'text' %}
          {% render 'text', block: block %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Editorial Photo Wall",
  "class": "editorial-photo-wall",
  "max_blocks": 6,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "page-width",
          "label": "Page"
        },
        {
          "value": "full-width",
          "label": "Full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "padding_block_start",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_block_end",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Section heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Heading text",
          "default": "<h2>Shop by image</h2>"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text",
          "default": "Placeholder alt text"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Placeholder caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "default": "/"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Editorial Photo Wall",
      "blocks": [
        { "type": "text" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}