{% comment %}
  Editorial Photo Wall section - based on Collection List (editorial layout)
  Data source changed to image picker with metadata
{% endcomment %}

<section class="section editorial-collection color-{{ section.settings.color_scheme }}">
  <div class="section__content section__content--{{ section.settings.section_width }}" style="padding-block-start: {{ section.settings.padding_block_start | append: 'px' }}; padding-block-end: {{ section.settings.padding_block_end | append: 'px' }};">
    {% render 'blocks', blocks: section.blocks %}

    {% assign items = '' | split: ',' %}

    {% for block in section.blocks %}
      {% if block.type == 'image' %}
        {% assign image = block.settings.image %}
        {% assign caption = block.settings.caption %}
        {% assign link = block.settings.link %}
        {% assign alt = block.settings.alt %}

        {% capture item %}
          <div class="collection-card collection-card--image-bg collection-card--flexible-aspect-ratio">
            {% if link != blank %}<a class="collection-card__link" href="{{ link }}">{% endif %}
              {% if image != blank %}
                <div class="collection-card__image">
                  {{ image | image_url: width: 800 | image_tag: loading: 'lazy', alt: alt }}
                </div>
              {% else %}
                <div class="collection-card__image">
                  {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            {% if link != blank %}</a>{% endif %}

            <div class="collection-card__inner">
              <div class="collection-card__content layout-panel-flex--column">
                {% if caption != blank %}
                  <p class="collection-card__caption">{{ caption }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endcapture %}

        {% assign items = items | push: item %}
      {% endif %}
    {% endfor %}

    {% render 'editorial-collection-grid', items: items %}
  </div>
</section>

{% schema %}
{
  "name": "Editorial Photo Wall",
  "class": "editorial-photo-wall-section",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_block_start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 48,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_block_end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 48,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "group",
      "name": "Header",
      "settings": {
        "content_direction": "column",
        "horizontal_alignment": "flex-start",
        "vertical_alignment": "center",
        "gap": 16,
        "width": "fill",
        "custom_width": 100,
        "width_mobile": "fill",
        "custom_width_mobile": 100,
        "padding-block-start": 0,
        "padding-block-end": 0,
        "padding-inline-start": 0,
        "padding-inline-end": 0,
        "inherit_color_scheme": true
      },
      "blocks": {
        "heading": {
          "type": "text",
          "name": "Heading",
          "settings": {
            "text": "<h3>Shop by image</h3>",
            "type_preset": "h3",
            "width": "fit-content",
            "alignment": "left",
            "padding-block-end": 16
          }
        }
      },
      "block_order": ["heading"]
    },
    {
      "type": "image",
      "name": "Photo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Image caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "default": "#"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text",
          "default": "Image alt text"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Editorial Photo Wall",
      "category": "Image",
      "blocks": [
        { "type": "image", "settings": { "caption": "First image" } },
        { "type": "image", "settings": { "caption": "Second image" } },
        { "type": "image", "settings": { "caption": "Third image" } },
        { "type": "image", "settings": { "caption": "Fourth image" } }
      ]
    }
  ]
}
{% endschema %}
