<section
  id="section-{{ section.id }}"
  class="countdown-timer {% if section.settings.color_scheme == 'light' %}is-light{% else %}is-dark{% endif %}"
  style="
    --bg: {{ section.settings.background_color }};
    --txt: {{ section.settings.text_color }};
    --pad: {{ section.settings.padding }}px;
    --align: {{ section.settings.text_alignment }};
  "
  data-end-time="{{ section.settings.end_time | escape }}"
>
  <div class="inner">
    <h2 class="heading">{{ section.settings.heading_main }}</h2>
    <h4 class="subheading">{{ section.settings.heading_sub }}</h4>

    <div class="countdown"></div>

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}"
         class="button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{{ 'countdown-timer.css' | asset_url | stylesheet_tag }}
{{ 'countdown-timer.js'  | asset_url | script_tag }}


{% schema %}
{
  "name": "Countdown Timer",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading_main",
      "label": "Main Heading",
      "default": "Limited Time Offer!"
    },
    {
      "type": "text",
      "id": "heading_sub",
      "label": "Sub Heading",
      "default": "Limited Time Offer!"
    },
    {
      "type": "select",
      "id": "heading_typography",
      "label": "Heading Typography",
      "default": "heading-3",
      "options": [
        { "value": "heading-1", "label": "Heading 1" },
        { "value": "heading-2", "label": "Heading 2" },
        { "value": "heading-3", "label": "Heading 3" },
        { "value": "heading-4", "label": "Heading 4" },
        { "value": "heading-5", "label": "Heading 5" },
        { "value": "heading-6", "label": "Heading 6" },
        { "value": "body", "label": "Body" },
        { "value": "caption", "label": "Caption" }
      ]
    },
    {
      "type": "select",
      "id": "subheading_typography",
      "label": "Subheading Typography",
      "default": "heading-4",
      "options": [
        { "value": "heading-1", "label": "Heading 1" },
        { "value": "heading-2", "label": "Heading 2" },
        { "value": "heading-3", "label": "Heading 3" },
        { "value": "heading-4", "label": "Heading 4" },
        { "value": "heading-5", "label": "Heading 5" },
        { "value": "heading-6", "label": "Heading 6" },
        { "value": "body", "label": "Body" },
        { "value": "caption", "label": "Caption" }
      ]
    },
    {
      "type": "text",
      "id": "end_time",
      "label": "Countdown End Time (in ISO format, e.g. 2025-06-20T23:59:00Z)",
      "default": "2025-06-20T23:59:00Z"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f6f6f6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 24
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Countdown Timer"
    }
  ]
}
{% endschema %}
