{% doc %}
  @prompt
    a card-style testimonial section displaying customer review quotes. carousel on manual clicks. each page has 3 cards. each card has 1 picture and 1 text quote area.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonial-carousel-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-testimonial-carousel__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-testimonial-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-testimonial-carousel__title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;}

  .ai-testimonial-carousel__subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
  }

  .ai-testimonial-carousel__wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.carousel_border_radius }}px;}

  .ai-testimonial-carousel__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    gap: 20px;
  }

  .ai-testimonial-carousel__page-{{ ai_gen_id }} {
    min-width: 100%;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 0.15 | prepend: '0 4px 12px rgba(0, 0, 0, ' | append: ')' }};
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};}

  .ai-testimonial-card__image-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius:50%;
    overflow: hidden;
    margin-bottom: 20px;
    flex-shrink: 0;
  }

  .ai-testimonial-card__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-card__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-testimonial-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-testimonial-card__quote-{{ ai_gen_id }} {
    color: {{ block.settings.quote_color }};
    font-size: {{ block.settings.quote_size }}px;
    line-height: 1.5;
    margin-bottom: 16px;
    flex-grow: 1;
  }

  .ai-testimonial-card__author-{{ ai_gen_id }} {
    color: {{ block.settings.author_color }};
    font-size: {{ block.settings.author_size }}px;
    font-weight: 600;
    margin: 0;
  }

  .ai-testimonial-carousel__controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 30px;
  }

  .ai-testimonial-carousel__nav-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-testimonial-carousel__nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-testimonial-carousel__nav-button-{{ ai_gen_id }}:disabled {
    background-color: {{ block.settings.button_disabled_color }};
    cursor: not-allowed;
    opacity: 0.5;
  }

  .ai-testimonial-carousel__nav-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-testimonial-carousel__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-testimonial-carousel__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_inactive_color }};
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-testimonial-carousel__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
  }

  .ai-testimonial-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 990px) {
    .ai-testimonial-carousel__page-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-testimonial-carousel__page-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-testimonial-carousel__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}<testimonial-carousel-{{ ai_gen_id }}
  class="ai-testimonial-carousel-{{ ai_gen_id }}"
